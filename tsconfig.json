{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["@types", "./node_modules/@types"],
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@infra/*": ["infra/*"],
      "@core/*": ["core/*"],
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["./src"]
}
